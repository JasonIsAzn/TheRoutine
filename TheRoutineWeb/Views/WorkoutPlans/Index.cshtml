@model IEnumerable<TheRoutineWeb.Models.WorkoutPlan>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.UserId)</th>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayName("Version")</th>
            <th>@Html.DisplayName("Group ID")</th>
            <th>@Html.DisplayNameFor(model => model.CycleLength)</th>
            <th>@Html.DisplayNameFor(model => model.IsActive)</th>
            <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
            <th>@Html.DisplayNameFor(model => model.EndedAt)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserId</td>
                <td>@item.Name</td>
                <td>@item.Version</td>
                <td>@item.PlanGroupId</td>
                <td>@item.CycleLength</td>
                <td>@(item.IsActive ? "✓" : "✗")</td>
                <td>@item.CreatedAt.ToString("g")</td>
                <td>@(item.EndedAt?.ToString("g") ?? "-")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
